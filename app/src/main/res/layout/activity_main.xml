<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context="com.example.android.singlescreenapp.MainActivity">


        <ImageView
            android:id="@+id/Carimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/car"
            android:contentDescription="@string/desc1"/>

        <TextView
            android:id="@+id/Title"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/url" />

        <LinearLayout
            android:id="@+id/Linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Carimage"
            android:orientation="vertical">


            <TextView
                android:id="@+id/Manage"
                style="@style/orangeBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manage" />

            <TextView
                android:id="@+id/Compare"
                style="@style/whiteBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/compare" />

            <TextView

                android:id="@+id/Repair"
                style="@style/orangeBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repair" />

            <TextView
                android:id="@+id/Reminder"
                style="@style/whiteBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminder" />


            <ImageView
                android:id="@+id/Picton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/pictons"
                android:contentDescription="@string/desc2" />

            <TextView
                android:id="@+id/Email"
                style="@style/orangeBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email" />


        </LinearLayout>

    </RelativeLayout>

</ScrollView>
